{
    "name": "switchyd",
    "version": "0.7.7.3",
    "manifest_version": 2,
    
    "background":{
        "scripts": [
            "bundle.js"
        ]
    },

    "options_page": "build/default/index.html",

    "permissions": [
        "proxy",
        "webRequest",
        "<all_urls>"
    ],
    
    "icons":{
        "16": "switchyd16.png",
        "48": "switchyd48.png",
        "128": "switchyd128.png"
    },

    "content_security_policy": "object-src 'self';script-src 'self' 'unsafe-eval';"
}
