{
    "name": "switchyd",
    "version": "0.8.0.0",
    "manifest_version": 3,
    
    "background":{
        "service_worker" : "dist/main.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "proxy",
        "webRequest"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*",
        "ws://*/*",
        "wss://*/*"
    ],
    
    "icons":{
        "16": "switchyd16.png",
        "48": "switchyd48.png",
        "128": "switchyd128.png"
    }
}
